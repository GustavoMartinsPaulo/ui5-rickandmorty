{
  "_version": "1.12.0",
  "sap.app": {
	"id": "sap.ui.rickandmorty",
	"type": "application",
	"title": "Rick and Morty Database",
	"description": "The app shows information on all Rick and Morty show characters",
	"applicationVersion": {
	  "version": "1.0.3"
	}
  },
  "sap.ui": {
	"technology": "UI5",
	"deviceTypes": {
		"desktop": true,
		"tablet": true,
		"phone": true
	}
  },
  "sap.ui5": {
	"rootView": {
		"viewName": "sap.ui.rickandmorty.view.App",
		"type": "XML",
		"async": true,
		"id": "app"
	},
	"dependencies": {
	  "minUI5Version": "1.60",
	  "libs": {
		"sap.m": {}
	  }
	},
	"routing": {
         "config": {
            "routerClass": "sap.m.routing.Router",
            "viewType": "XML",
            "viewPath": "sap.ui.rickandmorty.view",
            "controlId": "app",
            "controlAggregation": "pages",
            "transition": "slide",
            "bypassed": {
            	"target": "notFound"
            },
            "async": true
         },
         "routes": [{
            "pattern": "",
            "name": "appHome",
            "target": "home"
         }, {
         	"pattern": "detail",
         	"name": "charDetail",
         	"target": "detail"
         }],
         "targets": {
            "home": {
               "viewId": "home",
               "viewName": "Home",
               "viewLevel" : 1
            },
            "notFound": {
            	"viewId": "notFound",
            	"viewName": "NotFound",
            	"transition": "show"
            },
            "detail": {
            	"viewId": "charDetail",
            	"viewName": "CharDetail",
            	"viewLevel": 2
            }
         }
      }
  }
}